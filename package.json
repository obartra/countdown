{
  "name": "countdown",
  "version": "1.0.0",
  "description": "Simple, customizeable countdown without ads",
  "private": true,
  "scripts": {
    "functions:serve": "node scripts/serve-functions.js",
    "dev:with-functions": "concurrently --kill-others --success first \"pnpm dev\" \"pnpm functions:serve\"",
    "start": "pnpm dev:with-functions",
    "dev": "vite dev --host ${HOST:-127.0.0.1} --port ${PORT:-8080}",
    "preview": "vite preview --host --port 8080",
    "build": "vite build",
    "types": "tsc --noEmit -p tsconfig.json && tsc --noEmit -p tsconfig.node.json",
    "lint": "eslint \"{src,cypress}/**/*.{js,jsx,ts,tsx}\" *.ts --max-warnings=0",
    "lint:fix": "eslint \"{src,cypress}/**/*.{js,jsx,ts,tsx}\" *.ts --max-warnings=0 --fix",
    "test": "vitest run",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "cy:run": "cypress run",
    "cy:open": "cypress open",
    "e2e:start": "node scripts/e2e-server.js",
    "test:e2e": "ADMIN_SECRET=admin-e2e-secret CYPRESS_ADMIN_SECRET=admin-e2e-secret PORT=4173 FUNCTIONS_PORT=8889 CYPRESS_BASE_URL=http://localhost:4173 VITE_IMAGE_API_KEY_TENOR=test VITE_TENOR_CLIENT_KEY=countdown start-server-and-test \"node scripts/e2e-server.js\" http://localhost:4173 cy:run",
    "test:e2e:open": "ADMIN_SECRET=admin-e2e-secret CYPRESS_ADMIN_SECRET=admin-e2e-secret PORT=4173 FUNCTIONS_PORT=8889 CYPRESS_BASE_URL=http://localhost:4173 VITE_IMAGE_API_KEY_TENOR=test VITE_TENOR_CLIENT_KEY=countdown start-server-and-test \"node scripts/e2e-server.js\" http://localhost:4173 cy:open"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/obartra/countdown.git"
  },
  "keywords": [
    "countdown"
  ],
  "author": "Oscar Bartra",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/obartra/countdown/issues"
  },
  "homepage": "https://github.com/obartra/countdown#readme",
  "dependencies": {
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "handlebars": "^4.7.8",
    "marked": "^9.1.2",
    "openmoji": "^14.0.0",
    "react": "^18.3.1",
    "react-datepicker": "^4.25.0",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^2.5.4"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.5",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^22.9.0",
    "@types/react": "^18.3.12",
    "@types/react-datepicker": "^7.0.0",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^8.13.0",
    "@typescript-eslint/parser": "^8.13.0",
    "@vitejs/plugin-react-swc": "^3.7.1",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.2.1",
    "cypress": "^13.6.4",
    "eslint": "^9.14.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.2.0",
    "http-server": "^14.1.1",
    "jsdom": "^24.1.0",
    "netlify-cli": "^23.12.3",
    "postcss": "^8.4.47",
    "prettier": "^3.3.3",
    "start-server-and-test": "^2.0.2",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.6.3",
    "vite": "^5.4.11",
    "vitest": "^2.1.4"
  }
}
